---
import Layout from '../layouts/Layout.astro';
import Link from '../components/Link.astro';
---

<Layout title="Welcome to Astro.">
	<main class="flex flex-col items-center justify-center h-screen bg-gray-100 space-y-4">
		<h1 class="text-2xl font-bold">Welcome to Astro with Tailwind!</h1>
		<Link href="https://docs.astro.build/" text="Documentation" />
		<Link href="https://astro.build/chat/" text="Community Chat" icon="https://icons.example.com/chat-icon.png" />
		<Link href="https://astro.build/integrations/" text="Integrations" />
	</main>
</Layout>
